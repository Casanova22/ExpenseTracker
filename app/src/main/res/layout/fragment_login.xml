<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/app_bg"
        android:scaleType="fitXY"
    />

    <TextView
        android:id="@+id/loginText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/logInCont"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/varela_round"
        android:text="@string/loginPage_text"
        android:gravity="center"
        android:textColor="@color/text_color_secondary"
        android:textSize="50sp" />



    <LinearLayout
        android:id="@+id/logInCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/login_bg"
        android:elevation="4dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/varela_round"
            android:hint="@string/userHint"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_primary"
        />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/varela_round"
            android:hint="@string/pwHint"
            android:textColor="@color/text_color_primary"
            android:textColorHint="@color/text_color_primary"
        />


    </LinearLayout>

    <Button
        android:id="@+id/logInBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logInCont"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="17.5dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_bg"
        android:elevation="10dp"
        android:text="@string/log_in"
        android:fontFamily="@font/varela_round"
        android:textSize="18sp"
        android:textColor="@color/text_color_primary"
        android:textStyle="bold"
        android:shadowColor="@android:color/black"
    />

    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/logInCont"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="17.5dp"
        android:layout_marginEnd="17.5dp"
        android:layout_marginBottom="17.5dp"
        android:background="@drawable/btn_bg"
        android:elevation="10dp"
        android:fontFamily="@font/varela_round"
        android:shadowColor="@android:color/black"
        android:text="@string/sign_up"
        android:textColor="@color/text_color_primary"
        android:textSize="18sp"
        android:textStyle="bold"
    />
</RelativeLayout>
